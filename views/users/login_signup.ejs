<% layout("/layouts/boilerplate.ejs") %>

<style>
  @media (max-width: 575.9px) {
    .navbar_div {
      display: none;
    }
    .footer_div {
      display: none;
    }
    .scroll_up {
      bottom: 0;
      display: flex;
      transition: none;
    }
    .listing_div {
      height: 100vh;
      margin-top: 0px;
      margin-bottom: 0px;
    }
  }
  .heading {
    height: 2.8rem;
    font-size: 0.9rem;
    font-weight: 800;
    border-bottom: 1px solid rgba(100, 100, 100, 0.3);
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .login_signup_container {
    height: 100%;
    padding-top: 12px;
  }
  .login_signup_btns {
    height: calc(100% - 3.7rem);
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: auto auto auto auto;
  }
  .login_signup_btns h2 {
    margin-top: 1rem;
    margin-bottom: 3rem;
  }
  .login_signup_btns div {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .login_signup_btns p {
    margin: 1rem;
  }

  .login_signup_btns div button a {
    text-decoration: none;
    color: black;
  }
</style>
<div class="login_signup_container">
  <h1 class="heading">Log in or sign up</h1>
  <div class="login_signup_btns">
    <h2>Welcome to TraveLust</h2>
    <div>
      <p>Already a user</p>
      <button class="btn btn-dark"><a href="/login">Log in</a></button>
    </div>
    <p>or</p>
    <div>
      <p>New to TraveLust</p>
      <button class="btn btn-dark"><a href="/signup">Sign up</a></button>
    </div>
  </div>
  <div class="scroll_up show">
    <a href="/listings" class="bottom_nav_icon">
      <i class="fa-solid fa-magnifying-glass"></i>
      <p>Explore</p>
    </a>
    <a href="/listings/wishlist" class="bottom_nav_icon">
      <i class="fa-regular fa-heart"></i>
      <p>Wishlist</p>
    </a>
    <% if (!currUser) { %>
    <a href="/login_signup" class="bottom_nav_icon active">
      <i class="fa-regular fa-user"></i>
      <p>Log in</p>
    </a>
    <% } %> <% if (currUser) { %>
    <a href="/listings/trips" class="bottom_nav_icon">
      <i class="fa-solid fa-suitcase-rolling"></i>
      <p>Trips</p>
    </a>
    <a href="/listings/messages" class="bottom_nav_icon">
      <i class="fa-regular fa-message"></i>
      <p>Messages</p>
    </a>
    <a href="/listings/profile" class="bottom_nav_icon">
      <i class="fa-regular fa-user"></i>
      <p>Profile</p>
    </a>
    <% } %>
  </div>
</div>
